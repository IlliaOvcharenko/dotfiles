# Custom prompts

alias uprompt="PS1='\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '"
alias dprompt="PS1='\[\033[1;91m\][ \[\033[0;33m\]\u\[\033[32m\]@\[\033[36m\]\h \[\033[95m\]\w \[\033[1;91m\]]\[\033[0;90m\]$ \[\033[m\]'"
alias sprompt="PS1='\[\033[1;91m\][ \[\033[0;33m\]\u \[\033[95m\]\W \[\033[1;91m\]]\[\033[0;90m\]$ \[\033[m\]'"

